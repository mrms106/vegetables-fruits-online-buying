body{
    background-color: rgb(20, 18, 18);
}


.container{
	
	justify-content: center;
	align-items: center;
    margin-left: 36rem;
    margin-top: 10rem;
    background-image: url("ordertitle.jpg");
    height: 70vh;
    width: 70vh;
    border-radius: 20px;
   box-shadow: inset;
   background-position: relative;	
   box-shadow: 0 0 20px rgba(139, 138, 138, 0.669);
}


